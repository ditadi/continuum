{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "files": {
        "include": ["**/*.ts", "**/*.tsx", "**/*.json"]
    },
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "jsxQuoteStyle": "double"
        },
        "globals": ["__DEV__"]
    },
    "linter": {
        "enabled": true,
        "ignore": ["node_modules", "website"],
        "rules": {
            "recommended": true,
            "security": {
                "noDangerouslySetInnerHtml": "off"
            }
        }
    }
}
